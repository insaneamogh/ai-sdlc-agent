# Replit configuration for AI SDLC Agent
# Full-stack Python backend + React frontend

modules = ["nodejs-20", "web", "python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ui && npm install && npm run dev & pip install -r requirements.txt && uvicorn app.main:app --host 0.0.0.0 --port 8001 --reload"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 8001

[deployment]
deploymentTarget = "autoscale"
build = ["bash", "-c", "pip install -r requirements.txt && npm install && npm run build"]
run = ["bash", "-c", "npm run start & uvicorn app.main:app --host 0.0.0.0 --port 8001"]

